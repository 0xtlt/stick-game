<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/assets/css/master.sass">
    <title>Stick Game</title>
</head>
<body>

    <div class="inner" id="home" v-bind:class="{ active: isActive }">
        <h1>{{ msg }}</h1>
        <label for="pseudo">Chose your name</label>
        <input type="text" v-model="pseudo" id="pseudo">
        <button v-on:click="play">Play !</button>
    </div>
    <div class="inner" id="game" v-bind:class="{ active: isActive }">
        <div id="insearch" v-if="InGame === false">
            <h1>Bonjour {{ app.pseudo }}</h1>
            Vous allez rejoindre une partie
        </div>
        <div id="ingame" v-if="InGame">
            game
        </div>
    </div>

<script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/vue"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/assets/js/master.js"></script>
</body>
</html>