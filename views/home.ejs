<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/assets/css/master.sass">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <title>Stick Game</title>
</head>
<body>

    <div class="inner" id="home" v-bind:class="{ active: isActive }">
        <h1>{{ msg }}</h1>
        <label for="pseudo">Choose your name</label>
        <input type="text" v-model="pseudo" id="pseudo">
        <button v-on:click="play">Play !</button>
    </div>
    <div class="inner" id="game" v-bind:class="{ active: isActive }">
        <div id="insearch" v-if="InGame === false">
            <h1>Hello {{ app.pseudo }}</h1>
            Waiting for a partner
            <i class="fas fa-spinner fa-spin"></i>
        </div>
        <div id="ingame" v-if="InGame">

            <h1>{{ app.pseudo }} vs {{ adv }}</h1>
            <h2 v-if="lap">It's your turn</h2>
            <h2 v-else>It's not your turn</h2>
            <div id="stick">
                <div class="col" v-for="item in game.data">{{ item.col }}
                    <div v-on:click="block(item.col, ii.block)" class="block" :class="ii.class" v-for="ii in item.blocks">{{ ii.top }} : {{ ii.left }}</div>
                </div>
            </div>

            <div class="modal" v-if="modal">
                <div class="choose">
                    <div class="bartop" v-on:click="take_stick('top')"></div>
                    <div class="barleft" v-on:click="take_stick('left')"></div>
                    <div class="barright" v-on:click="take_stick('right')"></div>
                    <div class="barbottom" v-on:click="take_stick('bottom')"></div>
                </div>
            </div>

        </div>
    </div>

<script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/vue"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/assets/js/master.js"></script>
</body>
</html>